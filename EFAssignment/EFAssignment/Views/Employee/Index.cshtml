@model IEnumerable<EFAssignment.Models.EmployeeDetails>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Displaying list of employees-->
<div class="container">
    <h4>Employees List</h4>
    <div id="addemp">
        <a asp-controller="Employee" asp-action="SaveEmployeeDetails" class="btn btn-info ">Add Employee</a>
    </div>
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartmentDetails.Name)</td>
                <td>
                    <a asp-controller="Employee" asp-action="SaveEmployeeDetails" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">View</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
