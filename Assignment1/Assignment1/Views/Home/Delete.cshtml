@model Assignment1.Models.EmployeeDetails
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Delete Confirmation-->
<div class="container">
    <h4>Delete Employee</h4>
    <h5>Are you sure you want to delete this?</h5>
    <table class="table table-hover">
        <tr>
            <td>Name</td>
            <td> @Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td> @Html.DisplayFor(model => model.SelectedGenderType)</td>
        </tr>
        <tr>
            <td>Email</td>
            <td> @Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <td>Department</td>
            <td> @Html.DisplayFor(model => model.Department)</td>
        </tr>
        <tr>
            <td>Address</td>
            <td> @Html.DisplayFor(model => model.Address)</td>
        </tr>
    </table>
    <form asp-controller="Home" asp-action="Delete" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" id="addemp" />
        <a asp-action="Index" class="btn btn-info">Back</a>
    </form>
</div>
