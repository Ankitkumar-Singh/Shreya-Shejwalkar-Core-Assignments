@model IEnumerable<Assignment1.Models.EmployeeDetails>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Displaying list of employees-->
<div class="container">
    <h4>Employees List</h4>
    <div id="addemp">
        <a asp-controller="home" asp-action="SaveEmployeeDetails" class="btn btn-info ">Add Employee</a>
    </div>
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Department</th>
            <th>Address</th>
            <th>Terms</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.SelectedGenderType)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>

                @if (item.AcceptsTerms == true) { <td>Yes</td> }
                else { <td>No</td>}
                <td>
                    <a asp-controller="home" asp-action="SaveEmployeeDetails" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">View</a>
                    <a asp-controller="home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
